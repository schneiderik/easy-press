{
  "name": "easy-press",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git@github.com:schneiderik/easy-press.git"
  },
  "engines": {
    "node": "0.12.0"
  },
  "main": "./app.js",
  "scripts": {
    "build": "npm run build:js && npm run build:css && npm run build:html",
    "build:js": "browserify ./assets/js/index.js -g [ envify --NODE_ENV production ] -t babelify -g uglifyify -p bundle-collapser/plugin | uglifyjs --compress --mangle > ./public/js/index.js",
    "build:css": "node-sass ./assets/css/index.scss --output ./public/css",
    "build:html": "npm run build:html:static && node ./scripts/build-product-page-html.js",
    "build:html:static": "taft -p './assets/html/partials/**/*' -t './assets/html/layout.hbs' -y 'layout' -d './data/data.json' -H './lib/handlebars-helpers.js' -C './assets/html' assets/html/*.html --dest-dir public/",
    "prestart": "npm run build",
    "start": "npm run watch & node $npm_package_main",
    "start-prod": "node $npm_package_main",
    "test": "./node_modules/karma/bin/karma start config/karma.js --single-run",
    "watch": "SHELL=/bin/bash chokidar 'assets/**/*' -c 'path=\"{path}\"; ext=${path##*.}; if [ $ext = \"js\" ]; then npm run build:js; elif [ $ext = \"scss\" ]; then npm run build:css; elif [ $ext = \"html\" ] || [ $ext = \"hbs\" ]; then npm run build:html; fi;'"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.4.0",
    "babel-preset-react": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^10.2.4",
    "bundle-collapser": "^1.2.1",
    "chai": "^3.0.0",
    "chokidar": "^1.7.0",
    "chokidar-cli": "^1.2.0",
    "create-react-class": "^15.5.3",
    "envify": "^4.0.0",
    "karma": "^0.12.37",
    "karma-browserify": "^4.2.1",
    "karma-es5-shim": "0.0.4",
    "karma-mocha": "^0.2.0",
    "karma-phantomjs-launcher": "^0.2.0",
    "mocha": "^2.2.5",
    "node-sass": "^4.5.3",
    "onchange": "^1.1.0",
    "phantomjs": "^1.9.17",
    "prop-types": "^15.5.10",
    "react-lazy-load": "^3.0.12",
    "sinon": "^1.15.4",
    "sinon-chai": "^2.8.0",
    "taft": "^0.4.12",
    "uglify-js": "^3.0.9",
    "uglifyify": "^3.0.4"
  },
  "dependencies": {
    "body-parser": "^1.13.2",
    "cookie-parser": "^1.3.5",
    "express": "^4.13.1",
    "express-handlebars": "~2.0.1",
    "lodash": "~3.10.0",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "whatwg-fetch": "^0.10.1"
  }
}
