<article class="product">
  <figure class="product__cover-photo">
    <a href="/products/{{slug}}">
      <img src="{{coverPhotoSrc}}" alt="Cover photo of {{name}} by {{author}}"/>
    </a>
  </figure>
  <h1 class="product__name">
    <a href="/products/{{slug}}">{{name}}</a>
  </h1>
  <div class="product__author">{{author}}</div>
  <div class="product__price">{{price}}</div>
  <div class="product__quantity">{{quantity}} in stock</div>
</article>
