<article class="product">
  <h1 class="product__name">{{name}}</h1>
  <div class="product__author">{{author}}</div>
  <div class="product__price">{{price}}</div>
  <figure class="product__cover-photo">
    <img src="{{cover_photo_src}}" alt="Cover photo of {{name}} by {{author}}"/>
  </figure>
</article>
